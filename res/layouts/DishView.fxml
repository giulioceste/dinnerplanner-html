<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
  <center>
    <SplitPane fx:id="dishViewSplitPane" dividerPositions="0.5007518796992482" focusTraversable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
      <items>
        <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
          <children>
            <TextArea fx:id="textPreparation" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="text-input, text-area, text-preparation" text="Preparation&#10;1. do this&#10;2. do that&#10;3. and finished&#10;4. enjoy" wrapText="true" />
          </children>
        </Pane>
        <TableView fx:id="tableIngredients" prefHeight="200.0" prefWidth="200.0" styleClass="table-view, dish-view-table">
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
          <columns>
            <TableColumn prefWidth="75.0" text="Ingredient" fx:id="columnIngredient" />
            <TableColumn prefWidth="75.0" text="Quantity" fx:id="columnQuantity" />
            <TableColumn prefWidth="75.0" text="Costs" fx:id="columnCosts" />
          </columns>
        </TableView>
      </items>
    </SplitPane>
  </center>
  <!-- </BorderPane> -->
  <stylesheets>
    <URL value="@dishview.css" />
  </stylesheets>
  <top>
    <HBox maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
      <children>
        <ImageView fx:id="imageDish" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="dish-view-image" HBox.hgrow="NEVER">
          <image>
            <Image url="@../images/icecream.jpg" />
          </image>
        </ImageView>
        <VBox maxWidth="1.7976931348623157E308" styleClass="vbox-labels" HBox.hgrow="ALWAYS">
          <children>
            <Label fx:id="labelDishName" styleClass="label, dish-view-title" text="Dish name" />
            <Label fx:id="labelCostsPersons" styleClass="label, dish-view-subtitle" text="12 Dollar for 3 persons" />
          </children>
        </VBox>
      </children>
    </HBox>
  </top>
</fx:root>
